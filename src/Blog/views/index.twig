{% extends 'layout.twig' %}

{% block title "Mes articles" %}

{% block body %}
    <h1>BIENVENUE SUR LE BLOG !!</h1>

    <div class="row">

        {% for row in posts | batch(4) %}
        <div class="card-deck">
            {% for post in row %}
            <div class="card">
                <div class="card-header">
                    <h2>
                        <a href="{{ path('blog.show', { slug: post.slug, id: post.id}) }}">
                            {{ post.name }}
                        </a>
                    </h2>
                </div>
                <div class="card-block">
                    <p class="card-text">
                        {{ post.content | nl2br | extrait }}
                    </p>
                    <p class="text-mutted">
                        {{ post.created_at | ago }}
                    </p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('blog.show', { slug: post.slug, id: post.id}) }}" class="btn btn-primary">
                        Voir l'article
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    </div>

    {{ paginate(posts, 'blog.index') }}
{% endblock %}